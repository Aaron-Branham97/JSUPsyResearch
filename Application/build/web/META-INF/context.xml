<?xml version="1.0" encoding="UTF-8"?>

<Context path="/DatabaseSecurityLab">
    
    <Resource
        username="jbranham123"
        password="jbranham123"
        url="jdbc:mysql://localhost:3306/psychology?zeroDateTimeBehavior=convertToNull"
        name="jdbc/auth"
        auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        useSSL='false'
        initialSize="10"
        logAbandoned="true"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        autoReconnect='true'
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        testOnBorrow="true"
        testOnReturn="false"
        type="javax.sql.DataSource"
        validationQuery="SELECT 1"
        validationQueryTimeout="-1"
    />

    <Resource
        username="jbranham123"
        password="jbranham123"
        url="jdbc:mysql://localhost:3306/psychology?zeroDateTimeBehavior=convertToNull&amp;allowMultiQueries=true"
        name="jdbc/db_pool"
        auth="Container"
        driverClassName="com.mysql.jdbc.Driver"
        useSSL='false'
        initialSize="10"
        logAbandoned="true"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        autoReconnect='true'
        removeAbandoned="true"
        removeAbandonedTimeout="60"
        testOnBorrow="true"
        testOnReturn="false"
        type="javax.sql.DataSource"
        validationQuery="SELECT 1"
        validationQueryTimeout="-1"
    />

    <Realm
        className="org.apache.catalina.realm.DataSourceRealm"
        dataSourceName="jdbc/auth"
        digest="MD5"
        localDataSource="true"
        roleNameCol="rolename"
        userCredCol="password"
        userNameCol="username"
        userRoleTable="userrole"
        userTable="login"
    />

</Context>